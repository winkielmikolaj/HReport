@{
ViewData["Title"] = "Complaints";
}

@model List<InfoReport>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="EditAdd" asp-action="AddComplaints">
                Create new Complaint
            </a>
        </div>
        <div class="col-6 text-end">
            <h2 class="text-white text-uppercase">Complaints to HR</h2>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        </thead>
        <tr>
            <th class="text-white">Complaint</th>
            <th class="text-white">Description</th>
            <th class="text-white">Date</th>
            <th class="text-white">IsChecked</th>
            <th class="text-white">Actions</th>
        </tr>
        <tbody>
        @foreach (var entry in Model)
        {
                <tr class="@(entry.IsChecked ? "thick-strikethrough" : "")">

                    <td class="text-white">@entry.Complaint</td>
                    <td class="text-white">@entry.Description</td>
                    <td class="text-white">@entry.Date</td>
                    <td class="text-white">
                @using (Html.BeginForm("ToggleCompletion", "EditAdd", new { id = @entry.Id }, FormMethod.Post))
                {
                <input type="checkbox"
                       name="IsCompleted"
                       onchange="this.form.submit();"
                       @(entry.IsChecked ? "checked" : "") />
                }
            </td>
            <td>
                <a asp-controller="EditAdd" asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-primary btn-sm">
                    Edit
                </a>
                <a asp-controller="EditAdd" asp-action="Delete" asp-route-id="@entry.Id" class="btn btn-danger btn-sm">
                    Delete
                </a>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>
